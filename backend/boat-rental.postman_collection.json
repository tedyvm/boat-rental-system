  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"testuser@example.com\",\n  \"password\": \"Test1234!\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/users/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "users", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"Test1234!\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/users/login",
              "protocol": "http",
              "host": ["localhost"],
